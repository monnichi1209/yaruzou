<!DOCTYPE html>
<html>
<head>
  <title>Yaruzou</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
      <%= raw msg %>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? && !@is_guardian_page && !@is_role_selection && !@hide_sidebar %>
  <!-- サイドメニューの追加 -->
    <nav class="side-menu">
      <ul>
        <li><%= link_to "おてつだいなう", tasks_path(child_id: params[:child_id]) %></li>
        <li><%= link_to "どれにする？", tasks_for_kids_tasks_path(child_id: params[:child_id]) %></li>
        <li><%= link_to "ごほうび", rewards_tasks_path(child_id: params[:child_id]) %></li>
        <li><%# link_to "おてつだいバッジ", "/tasks/badge" %></li>
        <li><%# link_to "おてつだいどうが", "/tasks/manual" %></li>
      </ul>
    </nav>
  <% end %>

  <div class="main-content">
  <% if user_signed_in? && !@is_role_selection %>
    <% if current_user.admin? %>
      <%= link_to '管理者ページ', rails_admin.dashboard_path %>
    <% else %>
      <% if controller_name == "parents" && action_name == "dashboard" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <% else %>
        <% children = current_user.children %>
        <select id="child-switcher">
          <% children.each do |child| %>
            <option value="<%= child.id %>" <%= "selected" if child.id == params[:child_id].to_i %>>
              <%= child.name %>
            </option>
          <% end %>
        </select>
        <%= link_to "保護者", dashboard_parents_path %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <% end %>
    <% end %>
  <% end %>
 
  <%= yield %>
</div>

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <!-- Vue.js -->
  <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

</body>
</html>
