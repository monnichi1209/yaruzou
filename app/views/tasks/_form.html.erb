<%= form_with(model: @task) do |f| %>
  <div>
    <%= f.label :name, "タスク名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "詳細" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :due_on, "期限" %>
     <%= f.select :due_on, [["今日", Date.today], ["明日", Date.today + 1.day], ["来週", Date.today + 7.days]] %>
  </div>
  <div>
    <%= f.label :reward, "報酬" %>
    <%= f.select :reward, (100..5000).step(100) %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
