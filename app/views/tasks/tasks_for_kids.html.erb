<h1>お手伝い一覧</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>詳細</th>
      <th>報酬</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.reward %>円</td>
        <td>
        <%= button_to "このお手伝いをする！", choose_task_path(task, child_id: params[:child_id]), method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
