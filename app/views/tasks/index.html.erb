<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>状態</th>
      <th>期限</th>
      <th>報酬</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.status %></td>
        <td><%= task.due_on %></td>
        <td><%= task.reward %></td>
        <td>
          <%= link_to '編集', edit_task_path(task) %> |
          <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新しいタスクを追加', new_task_path %>
