<div class="container mt-5">
  <h1 class="display-4 text-center mb-4">いまやってるおてつだい</h1>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>おてつだいのなまえ</th>
        <th>ママからのおねがい</th>
        <th>いつまでにやるの？</th>
        <th>もらえるポイント</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.due_on %></td>
          <td><%= task.reward %>ポイント</td>
          <td>
            <%= button_to "おわった", mark_complete_task_path(task), method: :put, class: "btn btn-success btn-sm" %>
          </td>
          <td>
            <%= button_to "やめる", cancel_task_task_path(task), method: :put, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
