<div class="container mt-5">
  <div class="header-section d-flex justify-content-between align-items-center">
    <h1 class="display-4 mb-4">ごほうび</h1>
    <span class="points-badge">もってるポイント<%= User.find(params[:child_id]).points %>ポイント</span>
  </div>

  <h2 class="mb-3">おわったおてつだい</h2>
  
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>おてつだい</th>
        <th>いつまでにやるの？</th>
        <th>もらったポイント</th>
      </tr>
    </thead>
    <!-- ... 以下のコード ... -->

    <tbody>
      <% @completed_tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.due_on %></td>
          <td><%= task.reward %>ポイント</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="mt-5 mb-3">ごほうびえらんでね</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>ごほうび</th>
        <th>ひつようなポイント</th>
        <th>こうかん</th>
      </tr>
    </thead>
    <tbody>

      <tr>
        <td>おやつ</td>
        <td>100ポイント</td>
        <td><%= button_to 'こうかん', exchange_reward_tasks_path(item: 'おやつ', points: 100, child_id: params[:child_id]), method: :post, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <tr>
        <td>300円</td>
        <td>3000ポイント</td>
        <td><%= button_to 'こうかん', exchange_reward_tasks_path(item: '300円', points: 3000, child_id: params[:child_id]), method: :post, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <tr>
        <td>500円</td>
        <td>5000ポイント</td>
        <td><%= button_to 'こうかん', exchange_reward_tasks_path(item: '500円', points: 5000, child_id: params[:child_id]), method: :post, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <!-- 他のアイテムも同様に追加可能 -->
    </tbody>
  </table>

  <h2 class="mt-5 mb-3">もらったごほうび</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>ごほうび</th>
        <th>いつもらったか？</th>
        <th>おあかさんからコメント</th>
      </tr>
    </thead>
    <tbody>
      <% @exchanged_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.created_at.strftime('%Y-%m-%d (%a)') %></td>
          <td><%= item.description %></td> <!-- 交換の詳細情報を表示 -->
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
