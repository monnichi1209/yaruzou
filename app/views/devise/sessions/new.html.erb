<div class="container mt-5">
  <h2 class="text-center mb-4"><%= t(".sign_in") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: '' }) do |f| %>
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'form-control', autocomplete: "email" },
                  wrapper_html: { class: 'form-group' },
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'form-control', autocomplete: "current-password" },
                  wrapper_html: { class: 'form-group' },
                  label_html: { class: 'form-label' } %>
    </div>

    <div class="form-group">
      <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' }, wrapper_html: { class: 'form-check' }, label_html: { class: 'form-check-label' } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, t(".sign_in"), class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
