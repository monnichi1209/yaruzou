<div class="container mt-5">
  <h2 class="mb-4"><%= t(".title", resource: resource_name.to_s.humanize) %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'shadow p-4 bg-white rounded' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-info">
        <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :password, hint: t(".leave_blank_if_you_don_t_want_to_change_it"), required: false, input_html: { class: 'form-control', autocomplete: "new-password" } %>
    </div>

    <div class="form-group">
      <%= f.input :password_confirmation, required: false, input_html: { class: 'form-control', autocomplete: "new-password" } %>
    </div>

    <div class="form-group">
      <%= f.input :current_password, hint: t(".we_need_your_current_password_to_confirm_your_changes"), required: true, input_html: { class: 'form-control', autocomplete: "current-password" } %>
    </div>

    <div class="form-actions mb-4">
      <%= f.button :submit, t(".update"), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <h3 class="mt-5"><%= t(".cancel_my_account") %></h3>
  <div class="alert alert-danger">
    <%= t(".unhappy") %> <%= button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure"), turbo_confirm: t(".are_you_sure") }, method: :delete, class: 'btn btn-danger' %>
  </div>

  <div class="mt-4">
    <%= link_to t("devise.shared.links.back"), :back, class: 'btn btn-secondary' %>
  </div>
</div>
